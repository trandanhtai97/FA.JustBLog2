@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Roles Management";
}

<h2 class="text-center">Roles Management</h2>
<h4 class="text-success time-hide">@TempData["Message"]</h4>
<div class="btn btn-primary mb-3">
    <a href="@Url.Action("Create", "RolesAdmin")" class="text-white text-decoration-none"><span class="fas fa-plus"></span></a>
</div>

<table class="table table-bordered table-dark">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="d-flex">
                    <a href="@Url.Action("Edit", "RolesAdmin", new { id = item.Id})" class="mr-3"><i class="far fa-edit"></i></a>
                    <a href="@Url.Action("Details", "RolesAdmin", new { id = item.Id})" class="mr-3"><i class="fas fa-info-circle"></i></a>
                    <a href="@Url.Action("Delete", "RolesAdmin", new { id = item.Id})" class="text-danger mr-3"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>
