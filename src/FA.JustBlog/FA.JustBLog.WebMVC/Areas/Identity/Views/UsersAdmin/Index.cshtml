@model IEnumerable<User>

@{
    ViewBag.Title = "Users Management";
}

<h2 class="text-center">Users Management</h2>

<h4 class="text-success time-hide">@TempData["Message"]</h4>
<div class="btn btn-primary mb-3">
    <a href="@Url.Action("Create", "UsersAdmin")" class="text-white text-decoration-none"><span class="fas fa-plus"></span></a>
</div>
<table class="table table-bordered table-dark">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="d-flex">
                    <a href="@Url.Action("Edit", "UsersAdmin", new { id = item.Id})" class="mr-3"><i class="far fa-edit"></i></a>
                    <a href="@Url.Action("Details", "UsersAdmin", new { id = item.Id})" class="mr-3"><i class="fas fa-info-circle"></i></a>
                    <a href="@Url.Action("Delete", "UsersAdmin", new { id = item.Id})" class="text-danger mr-3"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
